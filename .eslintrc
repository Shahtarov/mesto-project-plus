{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": [
		"airbnb-base",
		"plugin:@typescript-eslint/recommended",
		"plugin:@typescript-eslint/recommended-requiring-type-checking",
		"prettier"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".ts", ".js", ".json"]
			}
		},
		"import/extensions": [".js", ".ts"]
	},
	"rules": {
		"no-console": "off",
		"import/extensions": [
			"error",
			"ignorePackages",
			{
				"js": "never",
				"ts": "never"
			}
		],
		"no-underscore-dangle": [
			"error",
			{
				"allow": ["_id"] // Разрешаем использование имен с подчеркиванием, например, _id
			}
		],
		"quotes": [
			"off" // Отключаем проверку кавычек, можно использовать любые кавычки (одинарные, двойные, шаблонные строки)
		],
		"indent": [
			"off" // Отключаем проверку отступов, можно использовать любые отступы (пробелы, табы, их смесь)
		]
	}
}
